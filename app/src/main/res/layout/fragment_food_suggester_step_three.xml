<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="viewModel"
    type="com.red_velvet.yumhub.ui.mealsSuggester.MealsSuggesterStep1ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.chip.Chip
            android:id="@+id/step_one_progress_id"
            android:layout_width="65dp"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/radius_16dp"
            android:backgroundTint="@color/green_green20"
            app:chipStrokeWidth="@dimen/_0dp"
            android:layout_marginEnd="@dimen/_4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/step_two_progress_id"
            app:chipEndPadding="65dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/step_two_progress_id"
            android:layout_width="65dp"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/radius_16dp"
            android:backgroundTint="@color/green_green20"
            app:chipStrokeWidth="@dimen/_0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:chipEndPadding="65dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/step_three_progress_id"
            android:layout_width="65dp"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/radius_16dp"
            android:layout_marginStart="@dimen/_4dp"
            android:backgroundTint="@color/primary"
            app:chipStrokeWidth="@dimen/_0dp"
            app:layout_constraintStart_toEndOf="@id/step_two_progress_id"
            app:layout_constraintTop_toTopOf="parent"
            app:chipEndPadding="65dp"
            />
        <TextView
            android:id="@+id/Tell_us_more_about_yourself_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Needed Caloirs"
            android:textSize="@dimen/text_size_20"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/fontColor_primary"
            android:layout_marginTop="@dimen/radius_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step_two_progress_id"
            />
        <TextView
            android:id="@+id/amount_of_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2052"
            android:textSize="@dimen/spacing_large_24"
            android:drawableStart="@drawable/fire_svgrepo_com"
            android:text="@{String.valueOf(viewModel.state.calories)}"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/green_green100"
            app:layout_constraintTop_toBottomOf="@id/Tell_us_more_about_yourself_id"
            app:layout_constraintStart_toStartOf="@id/Tell_us_more_about_yourself_id"
            app:layout_constraintEnd_toEndOf="@id/Tell_us_more_about_yourself_id"
            />
        <TextView
            android:id="@+id/suggestions_meals_suitable_you_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suggestions_meals_suitable_you"
            android:textSize="@dimen/text_size_16"
            android:layout_marginStart="@dimen/radius_16dp"
            android:layout_marginTop="@dimen/spacing_large_24"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/fontColor_primary"
            app:layout_constraintTop_toBottomOf="@id/amount_of_calories"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggested_meals_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_large_24"
            android:paddingEnd="@dimen/_4dp"
            app:items="@{viewModel.state.meals}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_meal_suggested"
            app:layout_constraintTop_toBottomOf="@id/suggestions_meals_suitable_you_id"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showIfLoading="@{viewModel.state.loading}"
            />
        <ImageView
            android:id="@+id/svgImageView_404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/not_found_search"
            app:showIfListEmpty="@{viewModel.state.meals.empty}"
            app:loading="@{viewModel.state.loading}"
            app:error="@{viewModel.state.error}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/textview_title_404"
            style="@style/CustomSearchTextViewTitleStyle"
            app:showIfListEmpty="@{viewModel.state.meals.empty}"
            app:loading="@{viewModel.state.loading}"
            app:error="@{viewModel.state.error}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/svgImageView_404"
            android:text="@string/not_found"
            />
        <ImageView
            android:id="@+id/svgImageView_no_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/search_no_internet"
            android:showInternalServerError="@{viewModel.state.error}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/textview_title_no_internet"
            style="@style/CustomSearchTextViewTitleStyle"
            android:showInternalServerError="@{viewModel.state.error}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/svgImageView_no_internet"
            android:text="@string/internet_is_not_available"
            />
        <TextView
            style="@style/CustomTextViewSearchSubTitleStyle"
            android:showInternalServerError="@{viewModel.state.error}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_title_no_internet"
            android:text="@string/please_make_sure_you_are_connected_to_the_internet_and_try_again"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>