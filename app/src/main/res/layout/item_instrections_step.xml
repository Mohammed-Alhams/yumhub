<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.red_velvet.yumhub.ui.instructions.StepsUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/step_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/step"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/step_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_x_x_small"
            android:layout_marginTop="@dimen/spacing_normal"
            android:fontFamily="@font/roboto_bold"
            android:text="@{item.stepNumber.toString()}"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintBottom_toBottomOf="@id/step_text_view"
            app:layout_constraintStart_toEndOf="@id/step_text_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_x_small"
            app:layout_constraintTop_toBottomOf="@id/step_text_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.slider.Slider
                    android:id="@+id/custom_drawable_instruction_view"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_instruction_drawable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/step_information_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_x_small"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@{item.stepDetails}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/custom_drawable_instruction_view"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Preheat oven to 400 degrees
                    F. Prepare two 9Ã—13 pans by lining with aluminum foil and spraying with non-stick spray. Chop the sausage into small, bite-size pieces, spread out in one pan. In the other add the cauliflower, drizzle with two tablespoons olive oil, sprinkle with salt and pepper.
                     Use your hands to mix and massage the oil into the cauliflower." />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>