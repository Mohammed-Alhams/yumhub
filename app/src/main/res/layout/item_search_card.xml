<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.red_velvet.yumhub.ui.search.SearchUISate.SearchRecipeUIState" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/no_width"
        android:background="@color/white"
        android:padding="@dimen/spacing_small"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginHorizontal="@dimen/fab_margin"
        app:cardCornerRadius="@dimen/raduis_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/image_card_width_100dp"
                android:layout_height="@dimen/image_card_heghit_84dp"
                style="@style/CardImageStyle"
                android:scaleType="centerCrop"
                app:imageUrl="@{item.RecipeSearchResultUIState}"
                android:layout_marginRight="@dimen/fab_margin"
                app:layout_constraintDimensionRatio="16:9"
                app:showWhenSuccess="@{!item.loading}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_title"
                android:text="Your text goes here" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>