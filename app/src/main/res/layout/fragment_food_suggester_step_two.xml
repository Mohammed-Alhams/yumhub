<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.red_velvet.yumhub.ui.mealsSuggester.mealSuggesterStep2.MealsSuggesterStep2ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="@dimen/radius_16dp"
            android:layout_marginTop="@dimen/_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/feature_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Suggester System"
            android:layout_marginStart="@dimen/_8dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/fontColor_primary"
            app:layout_constraintStart_toEndOf="@id/ic_back_id"
            app:layout_constraintTop_toTopOf="@id/ic_back_id"
            app:layout_constraintBottom_toBottomOf="@id/ic_back_id"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/step_one_progress_id"
            android:layout_width="65dp"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/radius_16dp"
            android:backgroundTint="@color/green_green20"
            app:chipStrokeWidth="@dimen/_0dp"
            android:layout_marginEnd="@dimen/_4dp"
            app:layout_constraintTop_toBottomOf="@id/feature_name_id"
            app:layout_constraintEnd_toStartOf="@id/step_two_progress_id"
            app:chipEndPadding="65dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/step_two_progress_id"
            android:layout_width="65dp"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/radius_16dp"
            android:backgroundTint="@color/primary"
            app:chipStrokeWidth="@dimen/_0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feature_name_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:chipEndPadding="65dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/step_three_progress_id"
            android:layout_width="65dp"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/radius_16dp"
            android:layout_marginStart="@dimen/_4dp"
            android:backgroundTint="@color/green_green20"
            app:chipStrokeWidth="@dimen/_0dp"
            app:layout_constraintStart_toEndOf="@id/step_two_progress_id"
            app:layout_constraintTop_toBottomOf="@id/feature_name_id"
            app:chipEndPadding="65dp"
            />
        <TextView
            android:id="@+id/Tell_us_more_about_yourself_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell us more about yourself!"
            android:textSize="@dimen/text_size_20"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/fontColor_primary"
            android:layout_marginTop="@dimen/radius_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step_two_progress_id"
            />
        <TextView
            android:id="@+id/what_we_can_do_id"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:text="@string/so_we_can_calculate_your_calories_and_suggest_meals_that_work_for_you"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/fontColor_secondary"
            app:layout_constraintTop_toBottomOf="@id/Tell_us_more_about_yourself_id"
            app:layout_constraintStart_toStartOf="@id/Tell_us_more_about_yourself_id"
            app:layout_constraintEnd_toEndOf="@id/Tell_us_more_about_yourself_id"
            />
        <TextView
            android:id="@+id/what_is_your_goal_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_your_goal"
            android:textSize="@dimen/text_size_16"
            android:layout_marginStart="@dimen/radius_16dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/fontColor_primary"
            android:layout_marginTop="@dimen/radius_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/what_we_can_do_id"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/maintain_weight_container_id"
            android:layout_width="@dimen/_104dp"
            android:layout_height="@dimen/_88dp"
            android:background="@color/white"
            android:onClick="@{()->viewModel.updateGoal(&quot;Maintain Weight&quot;)}"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@id/what_is_your_goal_id"
            app:layout_constraintEnd_toStartOf="@id/loss_weight_container_id"
            app:shapeAppearanceOverlay="@style/CustomGenderSelector"
            />
        <TextView
            android:id="@+id/maintain_weight_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maintain_weight"
            android:lines="2"
            android:maxEms="4"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/fontColor_secondary"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@id/maintain_weight_container_id"
            app:layout_constraintEnd_toEndOf="@id/maintain_weight_container_id"
            app:layout_constraintTop_toTopOf="@id/maintain_weight_container_id"
            app:layout_constraintBottom_toBottomOf="@id/maintain_weight_container_id"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/loss_weight_container_id"
            android:layout_width="@dimen/_104dp"
            android:layout_height="@dimen/_88dp"
            android:layout_marginTop="@dimen/_12dp"
            android:background="@color/white"
            android:onClick="@{()->viewModel.updateGoal(&quot;Loss Weight&quot;)}"
            app:layout_constraintTop_toBottomOf="@id/what_is_your_goal_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/CustomGenderSelector"
            />
        <TextView
            android:id="@+id/loss_weight_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loss_weight"
            android:lines="2"
            android:maxEms="4"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/fontColor_secondary"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@id/loss_weight_container_id"
            app:layout_constraintEnd_toEndOf="@id/loss_weight_container_id"
            app:layout_constraintTop_toTopOf="@id/loss_weight_container_id"
            app:layout_constraintBottom_toBottomOf="@id/loss_weight_container_id"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gain_weight_container_id"
            android:layout_width="@dimen/_104dp"
            android:layout_height="@dimen/_88dp"
            android:layout_marginTop="@dimen/_12dp"
            android:background="@color/white"
            android:onClick="@{()->viewModel.updateGoal(&quot;Gain Weight&quot;)}"
            app:layout_constraintTop_toBottomOf="@id/what_is_your_goal_id"
            app:layout_constraintStart_toEndOf="@id/loss_weight_container_id"
            app:shapeAppearanceOverlay="@style/CustomGenderSelector"
            />
        <TextView
            android:id="@+id/gain_weight_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gain_weight"
            android:lines="2"
            android:maxEms="4"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/fontColor_secondary"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@id/gain_weight_container_id"
            app:layout_constraintEnd_toEndOf="@id/gain_weight_container_id"
            app:layout_constraintTop_toTopOf="@id/gain_weight_container_id"
            app:layout_constraintBottom_toBottomOf="@id/gain_weight_container_id"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/your_weight_input_id"
            android:layout_width="@dimen/_160dp"
            android:layout_height="192dp"
            android:layout_marginTop="@dimen/spacing_large_24"
            android:textAlignment="center"
            android:inputType="number"
            android:background="@drawable/activity_selector_shape"
            app:layout_constraintStart_toStartOf="@id/maintain_weight_container_id"
            app:layout_constraintTop_toBottomOf="@id/maintain_weight_container_id"
            />
        <TextView
            android:id="@+id/your_weight_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your weight"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/fontColor_secondary"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@id/your_weight_input_id"
            app:layout_constraintEnd_toEndOf="@id/your_weight_input_id"
            app:layout_constraintTop_toTopOf="@id/your_weight_input_id"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/your_tall_input_id"
            android:layout_width="@dimen/_160dp"
            android:layout_height="92dp"
            android:layout_marginTop="@dimen/spacing_large_24"
            android:textAlignment="center"
            android:inputType="number"
            android:background="@drawable/activity_selector_shape"
            app:layout_constraintStart_toEndOf="@id/your_weight_input_id"
            app:layout_constraintTop_toBottomOf="@id/maintain_weight_container_id"
            />
        <TextView
            android:id="@+id/your_tall_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your tall"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/fontColor_secondary"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@id/your_tall_input_id"
            app:layout_constraintEnd_toEndOf="@id/your_tall_input_id"
            app:layout_constraintTop_toTopOf="@id/your_tall_input_id"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/your_age_input_id"
            android:layout_width="@dimen/_160dp"
            android:layout_height="92dp"
            android:layout_marginTop="@dimen/_8dp"
            android:textAlignment="center"
            android:inputType="number"
            android:background="@drawable/activity_selector_shape"
            app:layout_constraintStart_toEndOf="@id/your_weight_input_id"
            app:layout_constraintTop_toBottomOf="@id/your_tall_input_id"
            />
        <TextView
            android:id="@+id/your_age_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your age"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/fontColor_secondary"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@id/your_age_input_id"
            app:layout_constraintEnd_toEndOf="@id/your_age_input_id"
            app:layout_constraintTop_toTopOf="@id/your_age_input_id"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/fontColor_secondary"
            android:text="Next"
            android:layout_marginTop="@dimen/space_48dp"
            app:layout_constraintTop_toBottomOf="@id/your_age_input_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/radius_16dp"
            android:layout_marginBottom="@dimen/_182dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>